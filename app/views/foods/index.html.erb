<p style="color: green"><%= notice %></p>
<h1 class="text-center">List of Foods</h1>
<div class="container d-flex flex-column">
  <button class="align-self-end btn btn-primary new-food fw-bold"><%= link_to "New food", new_food_path %></button>

  <table class="table table-dark table-striped mt-5">
    <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement unit</th>
      <th scope="col">Unit price</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td><%= button_to "Delete", food, method: :delete, class: "btn btn-danger fw-bold" %></td>
    </tr>
    <% end %>
  </tbody>
  </table>  

</div> 

