<h1>Inventories</h1>

<div id="inventories" class="mt-2">
  <% @inventories.each do |inventory| %>
    <div class="inventory-display">
      <%= render inventory %>
      <% if can? :delete, inventory%>
        <%= button_to "REMOVE", inventory_path(inventory), method: :delete, class: "btn btn-danger btn-sm mt-2"%>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to "New inventory", new_inventory_path, class: "btn btn-success mt-4" %>