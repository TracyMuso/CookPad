<div>
<% @recipes.each do |recipe| %>
    <% if recipe.public %> 
    <div>
        <h3>
        <a href="/recipes/<%= recipe.id %>"> <%= recipe.name %></a>
        </h3>
        <p>By <%= recipe.user.name %></p>
        </div>
        <div>
        <p> Total food items: </p>
        <p> total price: </p>
        </div>
    <% end %>
    <% end %>
<div>
<p>
    <% if @recipes.empty? %>
        <span>No recipes added yet</span>
    <% end %>
    </p>
</div>
</div>