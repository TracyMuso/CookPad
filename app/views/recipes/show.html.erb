<div>
    <h2 class="text-center"><%= @recipe.name %></h2>
    <div class="mb-4">
        <h5 class="mb-3"> Preparation time: <%= @recipe.preparation_time %> </h5>
        <h5 class="mb-3"> Cooking time: <%= @recipe.cooking_time %> </h5>
        <p>Steps: <%= @recipe.description %> </p>
    </div>
    <div class="d-flex justify-content-between pb-4 border-bottom border-dark">

        <%=link_to "Generate shopping list", new_recipe_shopping_list_path(@recipe), data: { turbo_frame: 'modal' }, class: "btn btn-success"%>

        <% if can? :destroy, @recipe %>
            <%= link_to "Add ingredient", new_recipe_recipe_food_path(@recipe), class: "btn btn-primary add-food d-block"%>
        <% end %>
    </div>
    <div>
        <%= render "/recipes/recipe_food", recipe_foods:@recipe_foods%>
    </div>
</div>